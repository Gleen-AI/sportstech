window.gleenWidget.on("icebreaker_question:postback", (data) => {
            document.getElementById("helix-chat-container").style.display = "none";

            // Inject Botpress script dynamically if not already present
            if (!document.getElementById("bp-inject")) {
              const script1 = document.createElement("script");
              script1.src = "https://cdn.botpress.cloud/webchat/v3.1/inject.js";
              script1.async = true;
              script1.id = "bp-inject";
              document.body.appendChild(script1);
            }
          
            if (!document.getElementById("bp-config")) {
              const script2 = document.createElement("script");
              script2.src = "https://files.bpcontent.cloud/2025/05/20/15/20250520155129-11GY02KP.js";
              script2.async = true;
              script2.id = "bp-config";
              document.body.appendChild(script2);
            }
          
            // Open Botpress Webchat after a slight delay to ensure scripts load
            setTimeout(() => {
              if (window.botpressWebChat) {
                window.botpressWebChat.sendEvent({ type: "show" });
              }
            }, 1000); // Adjust delay as needed
          });
